{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist"
  },
  "include": ["server.ts", "socket/**/*", "game/**/*", "lib/**/*"],
  "exclude": ["node_modules", "src", ".next"]
}
